<Window x:Class="ProjectP.addTaskTodayDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectP"
        mc:Ignorable="d"
        Title="Taak voor vandaag toevoegen" Height="150" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Taakbeschrijving:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="descBox" HorizontalAlignment="Left" Height="23" Margin="114,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="268"/>
        <Label Content="Verwachtte tijd:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox Name="timeBox" HorizontalAlignment="Left" Height="23" Margin="114,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="27"/>
        <Button Content="Toevoegen" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" Width="75" Click="addTaskClick"/>
        <Label Content="minuten" HorizontalAlignment="Left" Margin="146,41,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
        <Button Content="Annuleer" HorizontalAlignment="Left" Margin="90,82,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
